<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row section-margin section">
    <div class="col-sm-9">
      <div class="row">
        <h1>Users</h1>
      </div>
      <% @users.each do |user| %>
        <div class="row">
          <div class="col-sm-3">
            <%= user.username %>
          </div>
          <div class="col-sm-2">
            <%= link_to ' Show', user, class: "btn btn-primary glyphicon glyphicon-user" %>
          </div>
          <% if current_user == user %>
            <div class="col-sm-2">
              <%= link_to ' Edit', edit_user_path(user), class: "btn btn-primary glyphicon glyphicon-edit" %>
            </div>
            <div class="col-sm-2">
              <%= link_to ' Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger glyphicon glyphicon-remove-sign" %>
            </div>
          <% else %>
            <div class="col-sm-4"></div>
          <% end %>
        </div>
      <% end %>
    </div>
    <br>
    <%= link_to ' New User', new_user_path, class: "btn btn-primary glyphicon glyphicon-plus" %>
  </div>
</div>
<br>
