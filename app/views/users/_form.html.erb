<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for @user, html: {class: "form-horizontal"} do |form| %>
        <%= form.input  :name %>
        <%= form.input  :username %>
        <%= form.input  :password %>
        <%= form.input  :email %>
        <%= form.input  :avatar %>
        <%= form.button :submit %>
      <% end %>
    </div>
  </div>
</div>
