<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row section-margin section">
    <div class="col-sm-8">
      <div class="media-right photo">
        <%= image_tag @gallery.main_image, class: "img-responsive", alt: @gallery.title %>
      </div>
      <div class="row">
        <h1 class="home-post-title"><%= @gallery.title.upcase %></h1>
        <p class="col-sm-4 hdr-p">
          <%= image_tag @gallery.user.personage, class: "media-object, img-circle" %>
          <span id="user"><a href="/users/<%= @gallery.user.id %>"><%= @gallery.user.name %></a></span>
        </p>
        <p class="col-sm-4 date hdr-p">
          on <a class="date" href="#"><%= @gallery.created_at.to_formatted_s(:long_ordinal) %></a>
        </p>
      </div>
      <div class="row p-top media-body" id="p-no-margin">
        <p>
          <%= simple_format(@gallery.summary) %>
        </p>
      </div>
      <% @gallery.photos.each do |photo| %>
        <div class="row">
          <%= image_tag photo.image, class: "img-responsive", alt: photo.name %>
        </div>
      <% end %>
      <div class="lw-links">
        <a href="#"><i class="glyphicon glyphicon-comment"></i><span>Read Comments</span></a>
        <a href="#"><i class="glyphicon glyphicon-cloud-upload"></i><span>Upload</span></a>
        <a href="/galleries/<%= @gallery.id %>/share" id="blue-a"><i class="glyphicon glyphicon-envelope" id="blue-share"></i><span>Share this gallery</span></a>
      </div>
    </div>
  </div>
  <br>
  <% if @gallery.is_owner?(current_user) %>
    <%= link_to ' Edit', edit_gallery_path(gallery), class: "btn btn-primary glyphicon glyphicon-edit" %> <%= link_to ' Delete', gallery, method: :delete, data: {confirm: 'Are you sure you want to delete this beautiful gallery?'}, class: "btn btn-danger glyphicon glyphicon-remove-sign" %>
  <% end %>
</div>
