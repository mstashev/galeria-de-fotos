<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for @gallery, html: {class: "form-horizontal"} do |form| %>
        <%= form.input  :title %>
        <%= form.input  :summary %>
        <%= form.input :id, :as => :hidden, :input_html => { :value => params[:id] } %>
        <%= form.input  :main_image %>
        <%= form.button :submit %>
      <% end %>
    </div>
  </div>
</div>
